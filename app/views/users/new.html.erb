<h1>Create new user</h1>

<% if flash[:user_errors] %>
  <% flash[:user_errors].each do |error| %>
    <p style='color: red;'><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |p| %>
<%= p.label :name %>
<%= p.text_field :name %> <br>



<%= p.label :password %>
<%= p.text_field :password %> <br>




<%= p.label :email %>
<%= p.text_field :email %> <br>




<%= p.submit %>

<%= button_to "Back", users_path(@user.id) %> 

<% end %>